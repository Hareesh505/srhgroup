<html>
<body>
    <h1>Employee Registration</h1><br/>
    <form action="/" method="POST">
        <table>
            <tr>
                <th style="text-align:left;">
                    Employee Name:
                </th>
                <td>
                    <input type="text" name="empName" id="empName"><br/>
                </td>
            </tr>
            <tr>
                <th style="text-align:left;">
                    Employee BG:
                </th>
                <td>
                    <input type="text" name="empBG" id="empBG"><br/>
                </td>
            </tr>
            <tr>
                <th style="text-align:left;">
                    Employee State:
                </th>
                <td>
                    <input type="text" name="empState" id="empState"/>
                </td>
            </tr>
            <tr>
                <td colspan=2>
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
